#!/bin/bash
set -e

echo "ğŸ“ Setting up Neovim configuration..."

# Check Neovim version compatibility with lazy.nvim
if command -v nvim &> /dev/null; then
    nvim_version=$(nvim --version | head -n1)
    echo "Found Neovim: $nvim_version"
    
    # Check if version is 0.8+ (required for lazy.nvim)
    if nvim --version | grep -q "NVIM v0\.[89]\|NVIM v[1-9]"; then
        echo "âœ… Neovim version is compatible with lazy.nvim"
    else
        echo "âŒ Neovim version is too old for lazy.nvim (requires 0.8+)"
        echo "Please run the package installation script first:"
        echo "  chezmoi apply --force"
        echo "Or manually install Neovim 0.8+:"
        echo "  sudo add-apt-repository ppa:neovim-ppa/stable -y"
        echo "  sudo apt update && sudo apt install neovim"
        exit 1
    fi
else
    echo "âŒ Neovim not found"
    echo "Please run the package installation script first:"
    echo "  chezmoi apply --force"
    exit 1
fi

# Create nvim config directories if they don't exist
mkdir -p "$HOME/.config/nvim/lua/config"
mkdir -p "$HOME/.config/nvim/lua/plugins"

# Verify the config files exist
if [[ -f "$HOME/.config/nvim/init.lua" ]]; then
    echo "âœ… Neovim config found at ~/.config/nvim/init.lua"
else
    echo "âš ï¸  Neovim config not found - this should be handled by chezmoi"
fi

# Set nvim as the default editor if available
if command -v nvim &> /dev/null; then
    echo "âœ… Neovim is available and configured"
    
    # Check if lazy.nvim is properly configured
    if [[ -f "$HOME/.config/nvim/lua/plugins/lazy.lua" ]]; then
        echo "âœ… lazy.nvim configuration found"
    else
        echo "âš ï¸  lazy.nvim configuration not found - check your chezmoi setup"
    fi
    
    # Optional: Run a quick health check (in background to not block)
    echo "ğŸ’¡ LazyVim will automatically install plugins on first launch"
    echo "ğŸ’¡ First launch may take a few minutes as plugins download"
else
    echo "âŒ Neovim not found - using vim as fallback"
fi

echo "âœ… Neovim setup complete!"
echo "ğŸ’¡ Open 'nvim' to let LazyVim automatically install plugins"
echo "ğŸ’¡ If you get errors, ensure Neovim 0.8+ is installed and run:"
echo "   chezmoi apply --force"
